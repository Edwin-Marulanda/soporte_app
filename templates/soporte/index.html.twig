{% extends 'base.html.twig' %}

{% block title %}Hello SoporteController!
{% endblock %}

{% block body %}


	{{parent()}}


	<div class="container bg-light mt-3">
		<div class="row mt-3">
			<div class="col-10"></div>
			<div class="col-2">
				<button type="button" class="btn btn-primary mt-3" data-toggle="modal" data-target="#exampleModalCenter">
					Nuevo soporte
				</button>

			</div>
		</div>
		<div class="row mt-3">
			<div class="col-12">
				<table class="table table-striped table-ligth">
					<thead class="table-dark">
						<tr>
							<th scope="col">Identificador</th>
							<th scope="col">Descripci√≥n</th>
							<th scope="col">Complejidad</th>
							<th scope="col">Empleado</th>
						</tr>
					</thead>
					<tbody>
						{% for soporte in soportes %}
							<tr>
								<td>{{soporte.id}}</td>
								<td>{{soporte.descripcion}}</td>
								<td>{{soporte.comp.getValor()}}</td>
								<td>{{soporte.emp.getNombre()}}</td>
							</tr>
						{% endfor %}


					</tbody>
				</table>


			</div>

		</div>


	</div>
	<!-- Button trigger modal -->

	<!-- Modal -->
	<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLongTitle">Registro nuevo soporte</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="container">
						<div class="row">
							<div class="col-12">
								<div class="alert alert-success" role="alert">
									Se asignara la tarea de soporte al empleado con id <span style="font-weight:bold">{{empleado.id}}</span>
                                    y nombre <span style="font-weight:bold">{{empleado.nombre}}</span>
								</div>
							</div>
							<div class="col-12">
								{{ form(fomulario) }}
								</div>
							</div>

						</div>
					</div>

				</div>
			</div>
		</div>

	{% endblock %}
